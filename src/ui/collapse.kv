#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
<CollapseBehavior>:
    y: self.collapsed_y if self.collapsed and self.collapsable else self.expanded_y
    height: self.collapsed_height if self.collapsed and self.collapsable else self.expanded_height

<CollapseLayout@CollapseBehavior+RelativeLayout>:

<CollapseBar>:
    id: collapse_bar
    size_hint_y: None
    label_padding: sp(3)
    height: self.font_size + self.label_padding
    label_text: ""

    canvas:
        # background color
        Color:
            rgb: hex("#000a12")
        Rectangle:
            pos: self.pos
            size: self.size

        # focus indicator
        Color:
            rgb: hex("#39796b") if self.focus else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.width, self.height * 0.2

    Image:
        id: action_img
        size_hint: (None, 0.7) if collapse_bar.collapsable else (0, 0)
        width: self.height
        x: self.parent.x
        pos_hint: {"center_y": 0.5}
        source: self.parent.expand_image if self.parent.dependant_collapsed else self.parent.collapse_image

    TextBoundLabel:
        x: action_img.right
        pos_hint: {"center_y": 0.5}
        font_size: self.parent.font_size
        text: self.parent.label_text
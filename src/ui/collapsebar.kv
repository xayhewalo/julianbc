#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
#:import TextBoundLabel src.ui.textboundlabel.TextBoundLabel
<CollapseBar>:
    id: collapse_bar
    label_text: ""

    canvas:
        # background color
        Color:
            rgb: hex("#000a12")
        Rectangle:
            pos: self.pos
            size: self.size

        # focus indicator
        Color:
            rgb: (0, 0, 1, 1) if self.focus else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.width, self.height * 0.2

    Image:
        id: action_img
        size_hint: None, 1
        width: self.height
        x: self.parent.x
        pos_hint: {"center_y": 0.5}
        source: self.parent.collapse_image if self.parent.visible else self.parent.expand_image

    TextBoundLabel:
        x: action_img.right
        pos_hint: {"center_y": 0.5}
        font_size: self.parent.font_size
        text: self.parent.label_text

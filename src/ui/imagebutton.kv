#:kivy 2.0.0
#:set corner_radius 5.
<ChangeButtonBgColor>:
    canvas.before:
        Color:
            rgba: self.current_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [corner_radius,]

<HoverChangeBgColor>:
    canvas:
        Color:
            rgba: (1, 1, 1, 0.9) if self.focus else (0, 0, 0, 0)
        Line:
            rounded_rectangle: self.x, self.y, self.width, self.height, corner_radius, 60
            dashes: [4, 2]

<ImageLayout>:
    Image:
        size_hint: self.parent.image_size_hint
        pos_hint: self.parent.image_pos_hint
        source: self.parent.image_source
        mipmap: True
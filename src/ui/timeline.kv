#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
#:import CollapseBar src.ui.collapsebar.CollapseBar
#:import EventView src.ui.eventview.EventView
#:import FocusKeyListenBehavior src.ui.focusedkeylisten.FocusKeyListenBehavior
#:import Mark src.ui.mark.Mark
#:import MarkBar src.ui.markbar.MarkBar
<Timeline>:
    id: timeline
    focus_next: collapse_bar
    mark: mark

    RelativeLayout:
        id: collapsable_layout
        size_hint: 1, None
        height: timeline.height -  collapse_bar.height

        EventView:
            id: event_view
            size_hint: 1, None
            height: self.parent.height -  mark_bar.height
            focus_previous: mark_bar
            focus_next: self  # todo set to next timeline or None?
            focus_on_scroll: True
            keyboard_listener: timeline

        MarkBar:
            id: mark_bar
            size_hint: 1, None
            y: event_view.top
            height: mark.font_size * 2
            focus_next: event_view
            focus_previous: collapse_bar
            keyboard_listener: timeline

        Mark:
            id: mark
            size_hint: 1, None
            height: event_view.height + mark_bar.height
            timeline: timeline
            mark_height: self.height
            mark_y: self.y
            label_align: self.LABEL_MID_INTERVAL


    CollapseBar:
        id: collapse_bar
        size_hint: 1, None
        pos_hint: {"top": 1}
        height: self.font_size * 1.25
        focus_next: mark_bar # todo focus next should be the next timeline because it shouldn't close if there is no other timeline
        # todo focus previous should be header or previous timeline
        keyboard_listener: timeline
        dependant: collapsable_layout
        label_text: timeline.cdt.date.calendar.name if timeline.cdt is not None else ""  # todo short cut to calendar namE
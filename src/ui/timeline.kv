#:kivy 2.0.0
#:import Mark src.ui.mark.Mark
<Timeline>:
    canvas:
        Color:
            rgb: 38/255, 50/255, 56/255
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: str(self.parent.focus)

    Mark:
        id: mark
        pos: self.parent.pos
        size: self.parent.size
        mark_height: self.height
        label_align: self.LABEL_MID_INTERVAL